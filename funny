def activity_selection(start, finish):
    
    # Created the list we need with indices, start times and finish times
    activities = list(zip(range(len(start)), start, finish))
    
    # Sort the list based on finish time
    activities.sort(key=lambda x: x[2])
    
    # According to the principle, we start with first activity
    selected = [activities[0][0]]
    last_finish = activities[0][2]
    
    # Using loop to check through the entire list
    for i in range(1, len(activities)):
        if activities[i][1] >= last_finish:
            selected.append(activities[i][0])
            last_finish = activities[i][2]
    
    return selected

start = [1, 3, 0, 5, 8, 5]
finish = [2, 4, 6, 7, 9, 9]
result = activity_selection(start, finish)
print("Selected activities:", result)
